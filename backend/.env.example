# Application Configuration
APP_NAME=Physical AI & Humanoid Robotics Textbook
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS - Allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database - Neon Postgres
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/robotics_db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Store
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=robotics_embeddings

# Email Configuration (for password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@robotics-textbook.com

# Logging
LOG_LEVEL=INFO
